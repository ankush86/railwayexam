<%= form_with(model: time_table, local: true) do |form| %>
  <% if time_table.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(time_table.errors.count, "error") %> prohibited this time_table from being saved:</h2>

      <ul>
      <% time_table.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :arrival_time %>
    <%= form.time_select :arrival_time, id: :time_table_arrival_time %>
  </div>

  <div class="field">
    <%= form.label :departure_time %>
    <%= form.time_select :departure_time, id: :time_table_departure_time %>
  </div>

  <div class="field">
    <%= form.label :station %>
    <%= form.select :station_id, Station.all.collect {|p| [ p.title, p.id ] } %>
  </div>

  <div class="field">
    <%= form.label :train %>
    <%= form.select :train_id, Train.all.collect {|p| [ p.title, p.id ] } %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
