<div class="row">
  <div class="col-md-offset-3 col-md-6">

    <p id="notice"><%= notice %></p>
    <h1>Train</h1>
    <table class="table">
      <tbody>
          <tr>
            <td><strong>Title</strong></td>
            <td>:</td>
            <td><%= @train.title %></td>
          </tr>
          <tr>
            <td><strong>Info</strong></td>
            <td>:</td>
            <td><%= @train.info %></td>
          </tr>
      </tbody>
    </table>

  <div>
</div>

<h1>Stations</h1>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Arrival time</th>
      <th>Departure time</th>
      <th>Station</th>
    </tr>
  </thead>
  <tbody>
    <% @train.time_tables.each do |time_table| %>
      <tr>
        <td><%= time_table.arrival_time %></td>
        <td><%= time_table.departure_time %></td>
        <td><%= time_table.station.title %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<center>
<%= link_to 'Edit', edit_train_path(@train) %> |
<%= link_to 'Back', trains_path %>
</center>